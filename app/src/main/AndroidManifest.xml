<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.djelassi.boushaba.meteo">

    <!-- Pour donner à l'app la permission de se connecter à internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Pour donner à l'app la permission d'envoyer les sms -->
    <uses-permission android:name="android.permission.SEND_SMS"></uses-permission>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MeteoActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SmsActivity"></activity>

    </application>

</manifest>